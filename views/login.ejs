<html>
  <head>
    <title>Login</title>
    <%- include('./partials/head'); %>
  </head>
  <body>
    <%- include('./partials/nav'); %>
    <header>
      <div class="container">
        <% if ( message.length > 0 ) { %>
          <p><strong><%= message %></strong></p>
          <% } %>
          
        <form action="/auth/login" method="post">
          <div class="row">
            <h2 style="text-align:center">Login with Social Media or Manually</h2>
            <div class="vl">
              <span class="vl-innertext">or</span>
            </div>
      
            <div class="col">
              <a href="/auth/facebook" class="fb btn">
                <i class="fa fa-facebook fa-fw"></i> Login with Facebook
               </a>
              <a href="/auth/twitter" class="twitter btn">
                <i class="fa fa-twitter fa-fw"></i> Login with Twitter
              </a>
              <a href="/auth/google" class="google btn"><i class="fa fa-google fa-fw">
                </i> Login with Google+
              </a>
              <a href="/auth/github" class="github btn"><i class="fa fa-github fa-fw">
              </i> Login with GitHub
              </a>
            </div>
      
            <div class="col">
              <div class="hide-md-lg">
                <p>Or sign in manually:</p>
              </div>
              
              <input type="text" name="username" placeholder="Username" required>
              <input type="password" name="password" placeholder="Password" required>
              <input type="submit" value="Login">
            </div>
            
          </div>
        </form>
      </div>
      
      <div class="bottom-container">
        <div class="row">
          <div class="col">
            <a href="/auth/signup" style="color:white" class="btn">Sign up</a>
          </div>
          <div class="col">
            <a href="/forgot/forgot" style="color:white" class="btn">Forgot password?</a>
          </div>
        </div>
      </div>
    <%- include('./partials/footer.ejs'); %>
  </body>
</html>
